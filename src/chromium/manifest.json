{
  "manifest_version": 3,
  "minimum_chrome_version": "97",
  "name": "Firefox Bridge (Beta)",
  "description": "Easily switch from Chrome to Firefox when you want to use Firefox's extra privacy features.",
  "version": "0.1",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "declarativeContent",
    "nativeMessaging"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "32": "images/firefox/firefox32.png"
    }
  },
  "commands": {
    "launchBrowser": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open Site in Firefox"
    },
    "launchFirefoxPrivate": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open Site in Firefox Private Window"
    }
  },
  "default_locale": "en"
}
