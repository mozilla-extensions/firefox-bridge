{
  "manifest_version": 3,
  "minimum_chrome_version": "97",
  "name": "Firefox Bridge (Beta)",
  "description": "Easily switch from Chrome to Firefox when you want to use Firefox's extra privacy features.",
  "version": "0.1",
  "icons": {
    "16": "images/firefox/firefox16.png",
    "32": "images/firefox/firefox32.png",
    "48": "images/firefox/firefox48.png",
    "96": "images/firefox/firefox96.png",
    "128": "images/firefox/firefox128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "declarativeContent",
    "nativeMessaging"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "32": "images/firefox/firefox32.png"
    }
  },
  "commands": {
    "launchBrowser": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "__MSG_shortcutPageLaunchFirefoxDescription__"
    },
    "launchFirefoxPrivate": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "__MSG_shortcutPageLaunchFirefoxPrivateDescription__"
    }
  },
  "default_locale": "en"
}
